                    </tr>

                    <tr>
                        <th class="page9" rowspan="5" width="17%"> PSU &amp; Private Category </th>
                        <th class="page9" rowspan="5" width="20%">{!Investment_Policy_Statement_IPS__c.PSU_and_Private__c} </th>
                        <td class="page9">
                            <apex:outputField value="{!Investment_Policy_Statement_IPS__c.PSU_Bonds__c}" /> PSU Bonds </td>
                    </tr>

                    <tr>
                        <td class="page9">
                            <apex:outputField value="{!Investment_Policy_Statement_IPS__c.PFI_Bonds__c}" /> PFI Bonds </td>
                    </tr>
                    <tr>
                        <td class="page9">
                            <apex:outputField value="{!Investment_Policy_Statement_IPS__c.Private_Sector_Bonds__c}" /> Private Sector Bonds </td>
                    </tr>
                    <tr>
                        <td class="page9">
                            <apex:outputField value="{!Investment_Policy_Statement_IPS__c.BASEL_III_Bonds__c}" /> BASEL III Bonds </td>
                    </tr>
                    <tr>
                        <td class="page9">
